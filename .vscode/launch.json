    "version": "0.2.0",
    "configurations": [
        {
          "name": "Python: Pytest",
          "type": "python",
          "request": "launch",
          "console": "integratedTerminal",
          "module": "pytest",
          "args": [
            "${file}"
          ],
            },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "stopOnEntry": true,
            "justMyCode": false
        }
    ]
}